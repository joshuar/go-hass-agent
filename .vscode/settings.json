{
  "[go.mod]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "always"
    },
    "editor.defaultFormatter": "golang.go"
  },
  "[templ]": {
    "editor.defaultFormatter": "a-h.templ"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "conventionalCommits.lineBreak": "\\n",
  "conventionalCommits.scopes": [
    "github",
    "agent",
    "vscode",
    "ui",
    "go",
    "tracker",
    "devcontainer",
    "linux/hwmon",
    "linux",
    "scripts",
    "container",
    "preferences",
    "cmd",
    "hass",
    "dbusx",
    "device",
    "codecov",
    "translations",
    "logging",
    "linux/proc",
    "git",
    "mage",
    "commands",
    "cli",
    "packaging",
    "upgrade",
    "README",
    "linux/net",
    "linux/media",
    "agent/sensor",
    "linux/cpu",
    "linux/system",
    "linux/mem",
    "BREAKING_CHANGES",
    "linux/power",
    "linux/battery",
    "hass/api",
    "hass/discovery",
    "components/registry",
    "components/preferences",
    "linux/desktop",
    "linux/disk",
    "linux/location",
    "pkg/whichdistro",
    "models",
    "components/id",
    "scheduler",
    "service",
    "components/validation",
    "schemas",
    "app",
    "workers",
    "mqtt",
    "pkg/hwmon",
    "docker",
    "air",
    "web/content",
    "web/assets",
    "web/templates",
    "server/middlewares",
    "server",
    "config",
    "assets"
  ],
  "css.lint.idSelector": "warning",
  "editor.formatOnSave": true,
  "emmet.includeLanguages": {
    "templ": "html"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*_templ.go": true,
    "**/CVS": true,
    "**/Thumbs.db": true
  },
  "go.alternateTools": {
    "customFormatter": "golangci-lint-v2"
  },
  "go.formatFlags": ["fmt", "--stdin"],
  "go.formatTool": "custom",
  "go.inlayHints.constantValues": true,
  "go.lintFlags": [
    "run",
    "--timeout=5m",
    "--issues-exit-code=0",
    "--output.text.colors=true",
    "--output.text.path=stdout",
    "--output.text.print-issued-lines=false",
    "--show-stats=false"
  ],
  "go.lintTool": "golangci-lint-v2",
  "go.useLanguageServer": true,
  "gopls": {
    "ui.semanticTokens": true
  },
  "licenser.author": "Joshua Rich <joshua.rich@gmail.com>",
  "licenser.license": "MIT",
  "licenser.useSPDXLicenseFormat": true,
  "ltex.language": "en-AU",
  "prettier.bracketSameLine": true,
  "tailwindCSS.includeLanguages": {
    "templ": "html"
  },
  "templ.goplsRemote": "auto",
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.scrollback": 10000,
  "conventionalCommits.promptBody": false,
  "tailwindCSS.emmetCompletions": true,
  "prettier.singleAttributePerLine": true
}
