{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MQTT: Watch 'homeassistant/#'",
      "type": "shell",
      "command": "mosquitto_sub -h mosquitto -v -t \"homeassistant/#\"",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "View Log: Home Assistant",
      "type": "shell",
      "command": "tail -F .devcontainer/data/home-assistant/config/home-assistant.log",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "agent: run",
      "type": "shell",
      "command": "air -c .air.toml",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
